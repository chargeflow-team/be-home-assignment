NODE_ENV=development

# Kafka / Redpanda
KAFKA_BROKERS=localhost:9092
TOPIC_ORDERS=orders.v1
TOPIC_PAYMENTS=payments.v1
TOPIC_DISPUTES=disputes.v1
KAFKA_GROUP_ID_RISK_ENGINE=risk-engine-group
KAFKA_GROUP_ID_DISPUTE_RESPONDER=dispute-responder-group

# Event generator behavior
EVENT_INTERVAL_MS=5000
ENABLE_DUPLICATES=true
DUPLICATE_RATE=0.1
ENABLE_OUT_OF_ORDER=true

# HTTP / gRPC
RISK_ENGINE_PORT=3001
RISK_ENGINE_GRPC_PORT=50051
DISPUTE_RESPONDER_PORT=3002
DISPUTE_RESPONDER_GRPC_PORT=50052

# Datastores (candidate chooses which to use)
MONGODB_URI=mongodb://localhost:27017/chargeflow
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=chargeflow
POSTGRES_PASSWORD=chargeflow
POSTGRES_DB=chargeflow

# Risk engine config
RISK_SCORE_TTL_MINUTES=15

# Dispute responder config
RISK_ENGINE_URL=http://localhost:3001
RISK_ENGINE_GRPC=localhost:50051
